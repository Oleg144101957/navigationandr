<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SecretFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvSecretPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:text="@string/this_is_a_secret_place"/>

    <Button
        android:id="@+id/goBackButtonSecret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_secret"/>

    <Button
        android:id="@+id/closeAllBoxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_the_whole_box"/>





</LinearLayout>